#!/bin/bash

pname="$(basename $0)"
based="$(dirname $0)"/..
stime="$(date +%Y%m%d%H%M%S)"

tmpd=/tmp/"$pname"."$stime"."$$"

mkdir -p "$tmpd"

exec 3>/dev/null
# exec 3>&2

#####################################################

echo -n $* |
tr 'A-Z' 'a-z' > "$tmpd"/stat

if [ ! -s "$tmpd"/stat ] ; then
    cat "$based"/data/wordle-answers-alphabetical.txt
    rm -rf "$tmpd"
    exit 0
fi

# parse
xargs -n10  < "$tmpd"/stat  >&2

# position
xargs -n10 < "$tmpd"/stat   |
awk '{
    for(i=1;i<6;i++) {
        if(0==$(2*i)) {
            file = "'"$tmpd"'/not-included"
            print $(2*i-1)  > file
        } else if(1==$(2*i)) {
            file = "'"$tmpd"'/not-in."i
            print $(2*i-1)  > file
        } else if (2==$(2*i)) {
            file = "'"$tmpd"'/in."i
            print $(2*i-1)  > file
        }
    }
}'

for i in {1..5} ; do
    if [ -s "$tmpd"/in."$i" ] ; then
        echo "$(uniq "$tmpd"/in."$i")"
    elif [ -s "$tmpd"/not-in."$i" ] ; then
        echo "[^$(sort -u "$tmpd"/not-in."$i"|tr -d '\n')]"
    else
        echo .
    fi
done    |
tr -d '\n'  |
awk '{ print "^"$0"$" }'    |
tee -a "$tmpd"/and.pattern  >&3

# included
cat "$tmpd"/{,not-}in.* |
sort -u |
tee "$tmpd"/included    |
tee -a "$tmpd"/and.pattern  >&3

# not included
sort -u "$tmpd"/not-included    |
grep -vf "$tmpd"/included   |
tr -d '\n'  |
xargs -I% echo '^[^%]{5}$'    |
tee -a "$tmpd"/and.pattern  >&3

awk '{ print "grep -E", $1, "|" }END{ print "cat" }' "$tmpd"/and.pattern   |
tee "$tmpd"/narrowing.sh    >&3

{ head "$tmpd"/*; echo; }   >&3

cat "$based"/data/wordle-answers-alphabetical.txt   |
bash "$tmpd"/narrowing.sh

#####################################################
rm -rf "$tmpd"
exit 0